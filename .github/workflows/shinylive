name: Deploy Shinylive App

on:
  push:
    branches: [main, master]
  workflow_dispatch

# These permissions are REQUIRED for the "GitHub Actions" source setting
permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: r-lib/actions/setup-r@v2
        with:
          use-public-rspm: true # drastically speeds up installation

      - uses: r-lib/actions/setup-pandoc@v2

      - name: Install Shinylive
        run: |
          install.packages("shinylive")
        shell: Rscript {0}

      - name: Build main app
        run: |
          # Export root app to _site
          shinylive::export(appdir = ".", destdir = "_site")
        shell: Rscript {0}

      - name: Build frozen app (review_v1)
        run: |
          # Export frozen app to _site/review_v1
          shinylive::export(appdir = "review_v1", destdir = "_site/review_v1")
        shell: Rscript {0}

      - name: Upload pages artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: "_site"

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
